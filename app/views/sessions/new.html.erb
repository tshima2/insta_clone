<h1><%= t('users.log_in') %></h1>
<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
  <%= f.label :email, t('users.email') %>
  <%= f.email_field :email %>
  <%= f.label :password, t('users.password') %>
  <%= f.password_field :password %>
  <%= f.submit t('users.log_in') %>
<% end %>
