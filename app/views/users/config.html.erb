<h1>確認画面</h1>
<%= form_with(model: @user, url: users_path, local: true) do |form| %>

<!-- 確認画面でアップロードした画像を表示させるための記述 -->
<div class="fields">
  <%= image_tag(@user.image.url) if @user.image && @user.image.url %>
  <%= form.hidden_field :image_cache %>
  <%= form.submit "投稿する" %>
  <% end %>
  <%= form_with(model:@user, url:new_user_path, local:true, method:"get") do |form| %>
  <%= form.hidden_field :image_cache %>
</div>

<div class="actions">
  <%= form.submit "戻る", name: "back" %>
</div>

<% end %>
