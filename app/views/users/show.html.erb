<% byebug %>

<h1><%= t('users.title_page', name: @user.name) %></h1>
<table>
  <tr><td><%= t('users.email') %>: <%= @user.email %></td></tr>
  <tr><td><%= t('users.profile_image') %>: <%= @user.image.url if @user.image.present? %></td></tr>
