<!DOCTYPE html>
<html>
  <head>
    <title>InstaClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  </head>

  <body>
<!--    
    <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
-->
    <p id="notice"><%= notice %></p>

<nav class="navbar navbar-default">
  <div class="container">

    <!-- 2.ヘッダ情報 -->
    <div class="navbar-header">
      <a class="navbar-brand">Instagram-Clone Work.</a>
    </div>

    <!-- 3.リストの配置 -->
    <ul class="nav navbar-nav">

      <% if logged_in? %>      

      <li>
	<%= link_to t('application.label_home'), feeds_path(current_user.id), data: {class: 'nav-link'} %>		
      </li>
      <li>
	<%= link_to t('application.label_favorite_feeds'), favorite_feeds_path(current_user.id), data: {class: 'nav-link'} %>		
      </li>
      <li>
	<%= link_to t('application.label_new_feed'), new_feed_path, data: {class: 'nav-link'} %>			
      </li>
      <li>
	<%= link_to t('application.label_profile'), user_path(current_user.id), data: {class: 'nav-link'} %>	
      </li>
      <li>
	<%= link_to t('application.label_logout'), sessions_path(current_user.id), method: :delete, data: {class: 'nav-link'} %>
      </li>

      <% else %>

      <li>
	<%= link_to t('application.label_signup'), new_user_path, data: {class: 'nav-link'} %>

      </li>
      <li>
	<%= link_to t('application.label_login'), new_sessions_path, data: {class: 'nav-link'} %>
      </li>

      <% end %>

    </ul>
  </div>
</nav>

    <%= yield %>
  </body>
</html>
